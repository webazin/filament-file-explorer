{
    "name": "webazin/filament-file-explorer",
    "description": "A comprehensive file explorer plugin for Filament 4 with multi-disk support",
    "keywords": [
        "filament",
        "file-explorer",
        "file-manager",
        "laravel",
        "plugin"
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1|^8.2|^8.3|^8.4",
        "filament/filament": "^4.0",
        "illuminate/contracts": "^11.0|^12.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "laravel/pint": "^1.17",
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "webazin\\FileExplorer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webazin\\FileExplorer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "webazin\\FileExplorer\\FileExplorerServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}